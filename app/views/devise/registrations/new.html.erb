<div class="home-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h1>ユーザー新規登録</h1>

    <div class="field">
      <%= f.label :name, "名前" %> 
      <%= f.text_field :name, autofocus: true, placeholder: "山田 太郎" %>
    </div>

    <div class="field">
      <%= f.label :email, "メールアドレス" %> 
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "xxx@xxx.com" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード" %> 
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "xxxxxxxx" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード再入力　" %> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "xxxxxxxx" %>
    </div>

    <div class="actions">
      <%= link_to "トップページに戻る", root_path, class: "btn-standard1" %>
      <%= f.submit "新規登録", class: "btn btn-primary", class: "btn-standard2" %>
    </div>
  <% end %>
</div>